{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": {
                "owner": "esbuild",
                "pattern": [
                    {
                        "regexp": "^(.*)$",
                        "message": 1
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "ESBUILD_WATCH_START",
                    "endsPattern": "ESBUILD_WATCH_READY"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
